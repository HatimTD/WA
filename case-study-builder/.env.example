# Database
# PostgreSQL connection string (use POSTGRES_URL for Vercel compatibility)
POSTGRES_URL="postgresql://user:password@localhost:5432/case_study_db"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (for production)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cloudinary Configuration
# Get from: https://cloudinary.com/console
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-upload-preset"

# OpenAI Configuration (for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-api-key-here"

# Resend Email Service
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your-api-key-here"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_TO_EMAIL="admin@yourdomain.com"

# Application Settings
NEXT_PUBLIC_APP_URL="https://casestudy.weldingalloys.com"
NODE_ENV="production"

# Development Only - Secure Credentials (WA Policy Section 5.1)
# Password for dev-login page (only works in development)
DEV_PASSWORD="your-dev-password"

# Development Admin Credentials (only works in NODE_ENV=development)
# Email for development admin access
DEV_ADMIN_EMAIL="admin@example.com"
# Password hash for development admin (generate with: bcrypt.hash('yourpassword', 10))
# Example: To generate, run in Node.js: require('bcryptjs').hash('yourpassword', 10)
DEV_ADMIN_PASSWORD_HASH="$2a$10$your-bcrypt-hash-here"

# Monitoring & Analytics
# Logtail (Better Stack) - Get from: https://logs.betterstack.com
LOGTAIL_TOKEN="your-logtail-source-token"

# Sentry Error Tracking - Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN="https://your-key@o0000000.ingest.sentry.io/0000000"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-sentry-project"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Vercel Analytics (automatically enabled on Vercel)

# Optional: Rate Limiting
# UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# NetSuite ERP Integration
# Get these credentials from NetSuite Administrator
# NETSUITE_ACCOUNT_ID="your-account-id"
# NETSUITE_CONSUMER_KEY="your-consumer-key"
# NETSUITE_CONSUMER_SECRET="your-consumer-secret"
# NETSUITE_TOKEN_ID="your-token-id"
# NETSUITE_TOKEN_SECRET="your-token-secret"
# NETSUITE_REST_URL="https://your-account-id.suitetalk.api.netsuite.com/services/rest"

# ============================================================================
# Break-Glass Emergency Admin Access (WA Policy Section 3.1)
# ============================================================================
# WARNING: Break-glass access should only be used in emergency situations.
# All access attempts and actions are logged and monitored.
#
# To enable break-glass access:
# 1. Set BREAK_GLASS_ENABLED=true
# 2. Generate a secure key: openssl rand -base64 32
# 3. Set BREAK_GLASS_ADMIN_KEY with the generated key
# 4. Set BREAK_GLASS_ADMIN_EMAIL for audit logging
#
# BREAK_GLASS_ENABLED="false"
# BREAK_GLASS_ADMIN_KEY="your-secure-break-glass-key-here"
# BREAK_GLASS_ADMIN_EMAIL="breakglass-admin@weldingalloys.com"
# BREAK_GLASS_SESSION_TIMEOUT_MINUTES="60"

# ============================================================================
# Google Places API (BRD 5.2.2 - Location Auto-Suggest)
# ============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
# Enable Places API and create an API key with Places restrictions
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# ============================================================================
# Vercel Cron Jobs (BRD 5.9.3 - NetSuite Auto-Sync)
# ============================================================================
# Secret to authenticate cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# ============================================================================
# Insightly CRM Integration (BRD 5.9 - CRM Integration)
# ============================================================================
# Get API key from: https://crm.insightly.com/users/usersettings
# Pod options: na1, na2, au1, eu1 (check your Insightly URL to determine pod)
INSIGHTLY_API_KEY="your-insightly-api-key"
INSIGHTLY_POD="na1"

# ============================================================================
# Okta SSO Integration (BRD 5.1 - SSO Integration)
# ============================================================================
# Get from Okta Admin Console: Applications > Create App Integration
# Use OIDC - OpenID Connect, Web Application
OKTA_CLIENT_ID="your-okta-client-id"
OKTA_CLIENT_SECRET="your-okta-client-secret"
OKTA_ISSUER="https://your-domain.okta.com"

# ============================================================================
# Translation Service (BRD 5.4 - Multi-Language Support)
# ============================================================================
# Option 1: Google Cloud Translation API
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key"

# Option 2: DeepL API (alternative)
# Get from: https://www.deepl.com/pro-api
# DEEPL_API_KEY="your-deepl-api-key"